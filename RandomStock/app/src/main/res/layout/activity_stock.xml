<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".StockActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/stockcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/scrollbar">
    </android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/menuLayout"
        android:id="@+id/scrollbar"
        android:scaleType="matrix"
        android:src="@drawable/scrollbar"/>

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        >


        <TextView
            android:id="@+id/asharesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="A-Shares"
            android:textColor="@color/white"
            android:textSize="16dip"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/hksharesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="H-Shares"
            android:textColor="@color/white"
            android:textSize="16dip"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/homeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="16dip"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/indicatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Indicator"
            android:textColor="@color/white"
            android:textSize="16dip"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/newsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="News"
            android:textColor="@color/white"
            android:textSize="16dip"
            android:background="@color/black"/>

    </LinearLayout>




</RelativeLayout>